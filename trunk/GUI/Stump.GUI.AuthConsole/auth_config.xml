<Configuration>
  <Stump>
    <Server>
      <AuthServer>
        <AuthServer>
          <Variable name="Host" serialized="false">127.0.0.1</Variable>
          <Variable name="Port" serialized="false">443</Variable>
          <Variable name="DatabaseConfiguration" serialized="true">
            <DatabaseConfiguration xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
              <DatabaseType>MySql</DatabaseType>
              <UpdateFileDir>./sql_update/auth/</UpdateFileDir>
              <User>root</User>
              <Password />
              <Host>localhost</Host>
              <Name>stump_auth</Name>
            </DatabaseConfiguration>
          </Variable>
        </AuthServer>
        <Handlers>
          <Connection>
            <ConnectionHandler>
              <Variable name="MaxConnectionLogs" serialized="false">5</Variable>
            </ConnectionHandler>
          </Connection>
        </Handlers>
        <IO>
          <AuthConsole>
            <Variable name="CommandPreffix" serialized="false" />
          </AuthConsole>
        </IO>
        <IPC>
          <IpcServer>
            <Variable name="IpcPort" serialized="false">9100</Variable>
          </IpcServer>
        </IPC>
        <Managers>
          <AccountManager>
            <Variable name="AvailableBreeds" serialized="true">
              <ArrayOfPlayableBreedEnum xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                <PlayableBreedEnum>Feca</PlayableBreedEnum>
                <PlayableBreedEnum>Osamodas</PlayableBreedEnum>
                <PlayableBreedEnum>Enutrof</PlayableBreedEnum>
                <PlayableBreedEnum>Sram</PlayableBreedEnum>
                <PlayableBreedEnum>Xelor</PlayableBreedEnum>
                <PlayableBreedEnum>Ecaflip</PlayableBreedEnum>
                <PlayableBreedEnum>Eniripsa</PlayableBreedEnum>
                <PlayableBreedEnum>Iop</PlayableBreedEnum>
                <PlayableBreedEnum>Cra</PlayableBreedEnum>
                <PlayableBreedEnum>Sadida</PlayableBreedEnum>
                <PlayableBreedEnum>Sacrieur</PlayableBreedEnum>
                <PlayableBreedEnum>Pandawa</PlayableBreedEnum>
                <PlayableBreedEnum>Roublard</PlayableBreedEnum>
              </ArrayOfPlayableBreedEnum>
            </Variable>
          </AccountManager>
          <WorldServerManager>
            <Variable name="WorldServerTimeout" serialized="false">20</Variable>
            <Variable name="PingCheckInterval" serialized="false">2000</Variable>
          </WorldServerManager>
        </Managers>
      </AuthServer>
      <BaseServer>
        <ConsoleBase>
          <!--Define the interval between two condition checks
            when server is asking something to the user by the console-->
          <Variable name="AskWaiterInterval" serialized="false">20</Variable>
        </ConsoleBase>
        <Settings>
          <!--Enable/Disable perfomances tracing-->
          <Variable name="EnableBenchmarking" serialized="false">False</Variable>
          <!--Disconnect Client after specified time(in s) or NULL for desactivate-->
          <Variable name="InactivityDisconnectionTime" serialized="true">
            <int>900</int>
          </Variable>
        </Settings>
        <Commands>
          <CommandBase>
            <!--Enable/Disable case check for server's commands-->
            <Variable name="IgnoreCommandCase" serialized="false">True</Variable>
          </CommandBase>
        </Commands>
        <Network>
          <ClientManager>
            <!--Max number of clients connected-->
            <Variable name="MaxConcurrentConnections" serialized="false">2000</Variable>
            <!--Max number of clients waiting for a connection-->
            <Variable name="MaxPendingConnections" serialized="false">100</Variable>
            <!--Max number of clients connected on the same IP or NULL for unlimited-->
            <Variable name="MaxIPConnexions" serialized="true">
              <int>10</int>
            </Variable>
            <!--Min interval between two received message or NULL for unlimited ( in ms )-->
            <Variable name="MinMessageInterval" serialized="true">
              <int>1</int>
            </Variable>
            <!--Buffer size /!\ Advanced users only /!\-->
            <Variable name="BufferSize" serialized="false">8192</Variable>
          </ClientManager>
          <VersionExtension>
            <!--Define the severity of the client version checking. Set to Light/NoCheck if you have any bugs with it.-->
            <Variable name="Severity" serialized="true">
              <VersionCheckingSeverity>Light</VersionCheckingSeverity>
            </Variable>
            <!--Version for the client.-->
            <Variable name="ExpectedVersion" serialized="true">
              <Version xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                <major>2</major>
                <minor>3</minor>
                <release>7</release>
                <revision>35100</revision>
                <patch>1</patch>
                <buildType>0</buildType>
              </Version>
            </Variable>
            <!--Actual version-->
            <Variable name="ActualVersion" serialized="false">1304</Variable>
            <!--Required version-->
            <Variable name="RequiredVersion" serialized="false">1304</Variable>
          </VersionExtension>
          <WorkerManager>
            <!--Define worker numbers by processor count.-->
            <Variable name="AutoWorkerNumber" serialized="false">True</Variable>
            <!--Number of workers only if AutoWorkerNumber is false-->
            <Variable name="WorkerThreadNumber" serialized="false">2</Variable>
          </WorkerManager>
        </Network>
        <Plugins>
          <PluginManager>
            <Variable name="PluginsPath" serialized="true">
              <ArrayOfString xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                <string>./plugins/</string>
              </ArrayOfString>
            </Variable>
          </PluginManager>
        </Plugins>
      </BaseServer>
    </Server>
  </Stump>
</Configuration>